icon-size = 0px
icon-gap = 0px

article
  &.page
    .icon
      display none

    .title
      a
        &:after
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content
    position relative

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
    
    .next
      right 0

  header
    .published
      color #ccc
      font-size 1.5em

    time
      color #888
      font 0.9em font-title
      margin-bottom 5px
      display inline
      line-height 1
      text-decoration none

    .title
      font-weight bold
      margin-bottom 30px
      font-size: 2.5em
      a
        color color-font
        &:hover
          color color-link
          text-decoration underline
          
  footer
    margin-top 0px
    padding-top 0px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px

    #readmore
      margin-top 15px
      margin-bottom 15px

    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon

    .addthis
      margin-top 15px
      iframe
        margin-top 0
